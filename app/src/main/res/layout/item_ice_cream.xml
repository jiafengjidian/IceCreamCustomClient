<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x450"
    android:layout_height="@dimen/y500"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/x100"
    app:cardCornerRadius="@dimen/x100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_ice_cream_item"
        android:orientation="vertical"
        android:id="@+id/id_item_ice_cream_linear_layout"
        android:padding="@dimen/x50">

        <ImageView
            android:id="@+id/id_item_ice_cream_image_view"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/y218"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cream_1" />

        <TextView
            android:layout_marginTop="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/x50"
            android:id="@+id/id_item_ice_cream_text_view_name"
            android:textColor="@android:color/black"
            android:text="草莓冰激凌" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/x50"
            android:id="@+id/id_item_ice_cream_text_view_price"
            android:textColor="@android:color/white"
            android:text="10元" />

    </LinearLayout>

</android.support.v7.widget.CardView>