<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x450"
    android:layout_height="@dimen/y500"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/x100"
    app:cardCornerRadius="@dimen/x100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item"
        android:id="@+id/id_item_setting_layout"
        android:padding="@dimen/x50"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x358"
            android:layout_height="@dimen/y218"
            android:scaleType="fitXY"
            android:id="@+id/id_item_setting_image_view"
            android:src="@drawable/ic_cream_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="草莓冰激凌"
                android:textSize="@dimen/x30"
                android:gravity="center"
                android:id="@+id/id_item_setting_text_view_name"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="库存:10"
                android:textSize="@dimen/x40"
                android:gravity="center"
                android:id="@+id/id_item_setting_text_view_number"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y90"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="货道:A3"
                android:textSize="@dimen/x40"
                android:gravity="center"
                android:id="@+id/id_item_setting_text_view_goodsType"
                android:textColor="@android:color/black" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="价格:23"
                android:textSize="@dimen/x40"
                android:gravity="center"
                android:id="@+id/id_item_setting_text_view_price"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>